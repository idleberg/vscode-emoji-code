{
  "name": "emoji-code",
  "displayName": "Emoji Code",
  "description": "Insert escaped Emoji code into a variety of languages",
  "version": "0.15.4",
  "publisher": "idleberg",
  "license": "MIT",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "scripts": {
    "compile": "npm run build",
    "build": "concurrently --prefix-colors 'blue,green' 'npm:build:*'",
    "build:code": "tsup",
    "build:image": "sharp resize 1024 1024 --input src/logo.svg --output resources/logo.png",
    "dev": "tsup --watch",
    "fix": "biome check --write .",
    "lint:ts": "biome check",
    "lint": "concurrently --prefix-colors 'blue,green' 'npm:lint:*'",
    "prepare": "lefthook install",
    "publish:ovsx": "ovsx publish --no-dependencies",
    "publish:vsce": "vsce publish --githubBranch main --no-dependencies",
    "test": "npm run lint",
    "vscode:prepublish": "npm run build"
  },
  "keywords": [
    "unicode",
    "emoji",
    "smileys",
    "emoticons"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/vscode-emoji-code"
  },
  "homepage": "https://github.com/idleberg/vscode-emoji-code#readme",
  "bugs": {
    "url": "https://github.com/idleberg/vscode-emoji-code/issues"
  },
  "main": "./lib/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "resources/logo.png",
  "galleryBanner": {
    "color": "#f76964",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.emoji-code.open-palette",
        "title": "Emoji Code: Open Palette"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "emoji-code",
      "properties": {
        "emoji-code.legacyMode": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%legacyMode%",
          "order": 1
        }
      }
    },
    "keybindings": [
      {
        "key": "alt+shift+j",
        "mac": "ctrl+shift+j",
        "command": "extension.emoji-code.open-palette",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "dependencies": {
    "dot-prop": "^10.1.0",
    "emojibase-data": "^17.0.0",
    "nano-memoize": "^3.0.16",
    "vscode-get-config": "^0.6.1",
    "vscode-insert-text": "^1.2.0"
  },
  "devDependencies": {
    "@idleberg/configs": "^0.3.3",
    "@types/node": "^24.7.2",
    "@types/vscode": "1.80.0",
    "concurrently": "^9.2.1",
    "sharp-cli": "^5.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501"
}
