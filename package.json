{
    "name": "emoji-code",
    "displayName": "Emoji Code",
    "description": "Insert escaped Emoji code into a variety of languages",
    "version": "0.14.0",
    "publisher": "idleberg",
    "license": "MIT",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "scripts": {
        "compile": "npm run build",
        "build": "npm-run-all --parallel build:*",
        "build:lib": "tsup",
        "build:resources": "gulp",
        "dev": "tsup --watch",
        "fix": "eslint --fix ./src",
        "lint:ts": "eslint ./src",
        "lint": "npm-run-all --parallel lint:*",
        "prepare": "husky",
        "publish:ovsx": "ovsx publish --no-dependencies",
        "publish:vsce": "vsce publish --githubBranch main --no-dependencies",
        "test": "npm run lint",
        "vscode:prepublish": "npm run build"
    },
    "keywords": [
        "unicode",
        "emoji",
        "smileys",
        "emoticons"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/vscode-emoji-code"
    },
    "homepage": "https://github.com/idleberg/vscode-emoji-code#readme",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-emoji-code/issues"
    },
    "main": "./lib/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "icon": "resources/logo.png",
    "galleryBanner": {
        "color": "#f76964",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.emoji-code.open-palette",
                "title": "Emoji Code: Open Palette"
            }
        ],
        "configuration": {
          "type": "object",
          "title": "emoji-code",
          "properties": {
            "pynsist.legacyMode": {
              "type": "boolean",
              "default": "false",
              "markdownDescription": "%jiLegacyMode%",
              "order": 1
            }
          }
        },
        "keybindings": [
            {
                "key": "alt+shift+j",
                "mac": "ctrl+shift+j",
                "command": "extension.emoji-code.open-palette",
                "when": "editorTextFocus && !editorReadonly"
            }
        ]
    },
    "dependencies": {
        "emojibase-data": "^15.3.1",
        "memoize": "^10.0.0",
        "nano-memoize": "^3.0.16",
        "vscode-insert-text": "^1.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/node": "^20.11.25",
        "@types/vscode": "^1.80.0",
        "eslint": "9.12.0",
        "eslint-plugin-jsonc": "^2.16.0",
        "gulp": "^5.0.0",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^2.0.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "npm-run-all2": "^6.2.3",
        "prettier": "^3.3.3",
        "tsup": "^8.3.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.0"
    },
    "lint-staged": {
        "*.(json|ts)": "eslint --cache --fix"
    },
    "packageManager": "pnpm@9.12.0+sha512.4abf725084d7bcbafbd728bfc7bee61f2f791f977fd87542b3579dcb23504d170d46337945e4c66485cd12d588a0c0e570ed9c477e7ccdd8507cf05f3f92eaca"
}
